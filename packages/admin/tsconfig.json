{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@types": [
        "types/*"
      ],
      // "&/*": [
      //   "src/shared/*"
      // ],
      // "#/*": [
      //   "src/main/*"
      // ],
      // "~/*": [
      //   "src/*"
      // ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, "src/utils/data-utils.js", "src/utils/string-validation.js", "src/views/homePages/add-good-form.js", "src/views/homePages/add-user-form.js"  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}